<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_result_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/gray"
    >

  <ImageView
      android:id="@+id/match_result_image"
      android:layout_width="@dimen/image_preview"
      android:layout_height="@dimen/image_preview"
      android:layout_gravity="right"
      android:adjustViewBounds="true"
      android:padding="4dp"
      android:scaleType="fitCenter"
      tools:background="@color/green"
      tools:src="@drawable/test"
      />

  <TextView
      android:id="@+id/match_result_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/match_result_image"
      tools:text="Name"
      />


</RelativeLayout>
